{
  "name": "modular-pets",
  "version": "1.0.0",
  "description": "Modular Monolith Pet Shop App",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --outdir ./dist",
    "start": "NODE_ENV=production bun dist/index.js",
    "test": "bun test",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "lint": "eslint --fix",
    "check": "eslint ."
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "drizzle-typebox": "^0.1.1",
    "elysia": "latest",
    "pg": "^8.13.1",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/bun": "latest",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.28.1",
    "eslint": "^9.15.0",
    "eslint-plugin-prettier": "^5.2.1",
    "typescript-eslint": "^8.16.0",
    "globals": "^15.12.0",
    "tsx": "^4.19.2"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ViniciusCestarii/modular-pets.git"
  },
  "keywords": [
    "pet",
    "monolith",
    "modular"
  ],
  "author": "ViniciusCestarii",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ViniciusCestarii/modular-pets/issues"
  },
  "homepage": "https://github.com/ViniciusCestarii/modular-pets#readme"
}
